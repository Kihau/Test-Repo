                   Fill="LightPink" Stroke="Black" Opacity=".85"
                   MouseMove="MoveShape" Panel.ZIndex="0"/>
        <Ellipse x:Name="circle1" Width="100" Height="100" Canvas.Left="541" Canvas.Top="229"
